<h1>Employee Database</h1>

<h3>Employees</h3>
{{!-- id, first_name, last_name, employee_ID, title, department, salary --}}



<table class="table table-dark table-hover">
  <thead>
    <tr>
        <th scope="col">UPDATE</th>
      <th scope="col">FIRST NAME</th>
      <th scope="col">LAST NAME</th>
      <th scope="col">ID#</th>
      <th scope="col">TITLE</th>
      <th scope="col">DEPT</th>
      <th scope="col">SALARY</th>
      <th scope="col">REMOVE</th>
    </tr>
  </thead>
  <tbody>





  {{#each employees}}
<tr>
{{!-- <th scope="row">{{this.id }}</th> --}}
    <td><a href="/update/{{this.id}}"><i class="fas fa-user-edit"></i></a></td>
       <td>{{this.first_name}} </a></td>
       <td>{{this.last_name}} </a></td>
       <td>{{this.employee_ID}}</td>
       <td>{{this.title}}</td>
       <td>{{this.department}}</td>
       <td>${{this.salary}}</td>
       <td><a href="/{{this.id}}" class="delete-Employee" data-id="{{this.id}}"><i class="fas fa-user-minus"></i></a></td>
</tr>
  {{/each}}
  </tbody>
</table>
<a href="/add" class="btn btn-info btn-lg active" role="button" aria-pressed="true">Add Employee</a>
